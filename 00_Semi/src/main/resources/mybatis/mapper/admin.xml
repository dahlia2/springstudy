<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace는 @Mapper를 지정한다. -->
<mapper namespace="com.gdu.vinery.mapper.AdminMapper">

  <select id="selectProduct" resultType="ProductDTO">
    SELECT *
      FROM PRODUCT
  </select>
  
  <select id="selectProductByNo" resultType="ProductDTO">
    SELECT *
      FROM PRODUCT
     WHERE PROD_NO = #{prodNo}
  </select>
  
  <update id="modifyProduct" parameterType="ProductDTO">
    UPDATE PRODUCT
       SET PROD_NAME = #{prodName}
         , PROD_NAME_ENG = #{prodNameEng}
         , PROD_PRICE = #{prodPrice}
         , PROD_NATION = #{prodNation}
         , PROD_ALCOHOL = #{prodAlcohol}
         , PROD_STOCK = #{prodStock}
      WHERE PROD_NO = #{prodNo} 
  </update>
  
  <select id="selectUsers" resultType="UserDTO">
    SELECT *
      FROM USERS
  </select>
  
</mapper>